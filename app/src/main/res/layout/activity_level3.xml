<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <GridLayout
            android:layout_width="322dp"
            android:layout_height="398dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.711"
            android:id="@+id/tableRow" android:layout_marginTop="90dp" android:layout_marginEnd="20dp"
            app:layout_constraintVertical_bias="0.476">
        <ImageView
                android:layout_width="101dp"
                android:layout_height="97dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView1"
                android:layout_column="0"
                android:layout_row="0"
                tools:ignore="ContentDescription"
                android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="101dp"
                android:layout_height="97dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView2"
                android:layout_column="1"
                android:layout_row="0"
                tools:ignore="ContentDescription"
                android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="107dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView3"
                android:layout_column="2"
                tools:ignore="ContentDescription"
                android:layout_row="0" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="101dp"
                android:layout_height="97dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView4"
                android:layout_column="0"
                tools:ignore="ContentDescription"
                android:layout_row="1" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="101dp"
                android:layout_height="97dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView5"
                android:layout_column="1"
                tools:ignore="ContentDescription"
                android:layout_row="1" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="109dp"
                android:layout_height="94dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView6"
                android:layout_column="2"
                tools:ignore="ContentDescription"
                android:layout_row="1" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="101dp"
                android:layout_height="97dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView7"
                android:layout_column="0"
                tools:ignore="ContentDescription"
                android:layout_row="2" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="101dp"
                android:layout_height="97dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView8"
                android:layout_column="1"
                tools:ignore="ContentDescription"
                android:layout_row="2" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="108dp"
                android:layout_height="99dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView9"
                android:layout_column="2"
                tools:ignore="ContentDescription"
                android:layout_row="2" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="101dp"
                android:layout_height="97dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView10"
                android:layout_column="0"
                tools:ignore="ContentDescription"
                android:layout_row="3" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="101dp"
                android:layout_height="97dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView11"
                android:layout_column="1"
                android:layout_row="3" tools:ignore="ContentDescription"
                android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="107dp"
                android:layout_height="96dp"
                app:srcCompat="@drawable/touch"
                android:id="@+id/imageView12"
                android:layout_column="2"
                tools:ignore="ContentDescription"
                android:layout_row="3" android:onClick="increaseScore"/>
    </GridLayout>
    <TextView
            android:text="Timer: 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.029" android:textSize="30sp" android:textStyle="bold"
            android:textAlignment="center"/>
    <TextView
            android:text="Score: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreText" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.958"
            android:textStyle="bold" android:textAlignment="center" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.143"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.915" app:layout_constraintVertical_bias="0.955"
            android:textSize="18sp" android:textStyle="bold|italic" android:textAlignment="center"
            android:onClick="back"/>
</android.support.constraint.ConstraintLayout>