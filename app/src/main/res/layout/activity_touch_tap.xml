<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TouchTap">

    <Button
            android:text="EASY"
            android:layout_width="127dp"
            android:layout_height="62dp"
            android:id="@+id/btn_level1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold|italic" android:textAlignment="center"
            android:textSize="30sp" app:layout_constraintVertical_bias="0.409"
            android:background="@android:color/holo_green_light"/>
    <Button
            android:text="MEDIUM"
            android:layout_width="127dp"
            android:layout_height="62dp"
            android:id="@+id/btn_level2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold|italic" android:textAlignment="center"
            android:textSize="30sp" app:layout_constraintVertical_bias="0.594"
            android:background="@android:color/holo_blue_dark"/>
    <Button
            android:text="HIGH"
            android:layout_width="127dp"
            android:layout_height="62dp"
            android:id="@+id/btn_level3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold|italic" android:textAlignment="center"
            android:textSize="30sp" app:layout_constraintVertical_bias="0.777"
            android:background="@android:color/holo_red_dark"/>
    <TextView
            android:text="Play tap tap"
            android:layout_width="365dp"
            android:layout_height="78dp"
            android:id="@+id/textView" android:textStyle="bold|italic"
            android:textAlignment="center" android:textSize="50sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.266"
            app:layout_constraintVertical_bias="0.015" android:fontFamily="cursive" android:typeface="monospace"
            android:textColor="@android:color/holo_purple"/>
    <TextView
            android:text="SELECT ANY LEVEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_level1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:fontFamily="sans-serif-black"
            android:textAllCaps="true" android:textStyle="bold|italic" android:textAlignment="center"
            android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>